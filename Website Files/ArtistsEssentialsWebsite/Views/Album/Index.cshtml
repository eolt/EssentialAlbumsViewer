@{
    ViewData["Title"] = "Album Genres Page";

    var hiphopimg = @"images\hiphop_cover.jpg";
    var popimg = @"images\pop_cover.jpg";
    var rockimg = @"images\rock_cover.jpg";

    List<string> genres = new List<string>()
    {
        "pop", "hip hop",  "soul", "rock", "electronic", "country", "metal", "punk", "jazz"
    };
}

<section class="hero hero-album-header">
    <div class="hero-container">
        <div class="hero-text">
            <h1 class="display-4 fw-normal">Album page</h1>
            <p class="lead fw-normal">Find essential albums of some of your favorite artist. Or discover new music.</p>
        </div>
    </div>
</section>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="first-slide d-block w-100" style="filter:brightness(50%)" src="@hiphopimg" alt="First slide">
            <div class="carousel-caption text-left">
                <h2 class="display-4">Hip Hop</h2>
                <p>View Albums Of Essential Hip Hop Heros</p>
                <p class="lead">
                    <a class="tag" style="padding: 1% 1%" asp-action="ShowAlbums" asp-route-genre="hip hop">View Hip Hop Artists</a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="second-slide d-block w-100" style="filter:brightness(50%)" src="@popimg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h2 class="display-4">Pop</h2>
                    <p class="lead">View Albums of Essential Popstars </p>
                    <p>
                        <a class="tag" style="padding: 1% 1%" asp-action="ShowAlbums" asp-route-genre="pop">View Pop Artists</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="third-slide d-block w-100" src="@rockimg" alt="Third slide">
            <div class="container">
                <div class="carousel-caption text-right">
                    <h2 class="display-4">Rock</h2>
                    <p class="lead">View Albums Of Essential Rockstars</p>
                    <p>
                        <a class="tag" style="padding: 1% 1%" asp-action="ShowAlbums" asp-route-genre="rock">View Rock Artists</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<hr class="my-4" />
<h1 class="text-center">Select Genres</h1>
<br />
<section class="tags-wrapper">

    @foreach (var genre in genres)
    {
        <a class="tag" asp-action="ShowAlbums" asp-route-genre="@genre">
            <h5 style="text-transform:capitalize">@Html.DisplayFor(item => genre)</h5>
        </a>
    }
</section>
