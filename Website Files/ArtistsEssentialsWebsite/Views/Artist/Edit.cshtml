@model ArtistsEssentialsWebsite.Models.Artist

@{
    ViewData["Title"] = "Edit Artist";
}

<div class="jumbotron jumbotron-fluid">
    <form asp-action="Edit">
        <h1 class="h3 mb-3 font-weight-normal">Update band or artist info</h1>
        <input type="hidden" asp-for="Id" />
        <div class="form-group form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mx-sm-5 mb-2">
                <label asp-for="Name" class="col-sm-2 col-form-label">Artist Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-row">
            <div class="input-group mx-sm-5 mb-2">
                <label asp-for="Genre" class="col-sm-2 col-form-label">Artist Genre</label>
                <div class="col-sm-10">
                    <input asp-for="Genre" class="form-control" />
                </div>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-row">
            <div class="input-group mx-sm-5 mb-2">
                <label asp-for="Image" class="col-sm-2 col-form-label">Artist Image Link</label>
                <div class="col-sm-10">
                    <input asp-for="Image" class="form-control" />
                 </div>
                 <span asp-validation-for="Image" class="text-danger"></span>
             </div>
         </div>
         <div class="form-floating">
             <input type="submit" value="Edit" class="btn btn-lg btn-primary" />
              <a class="btn btn-lg btn-secondary" asp-action="ShowArtists" asp-route-genre="@Model.Genre">Exit</a>
          </div>
    </form>
 </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}